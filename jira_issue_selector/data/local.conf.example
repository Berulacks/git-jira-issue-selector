# ~ LOCAL CONFIG FILE EXAMPLE ~

Jira:
    # ----- THESE ARE THE DROIDS YOU'RE LOOKING FOR -----
    # Filter results for:
    Filter:
        # You probably want to fill these out,
        # ...but you can uncomment what you don't need
        #Assignee: <YOUR_NAME>
        Project: <YOUR_PROJECT_KEY> # REQUIRED
        #Issue Resolution: Unresolved
        #Status: Implement
    
    # A custom JQL query (if necessary; overrides previous fields)
    # Use this if the 4 fields above are not enough for your needs.
    #JQL: "project = PNAME AND assignee = '<YOUR_NAME>' AND status != 'Ready to Test'"
    # ----- END DROIDS -----
    #
    # NB: You may also uncomment the following line if you want to filter by a specific board
    #Search URL: "https://<YOUR_SITE>.atlassian.net/rest/agile/1.0/board/<BOARD_NUMBER>/issue"

Main:
    # How many issues to show
    #Max Responses: 4
    # Refresh the issue cache every n minutes
    #Refresh Interval: 1440

    # Uncomment this if you want a hardcoded cache location
    # (default is inside $HOME/.config/jira_issue_selector)
    #Cache File: ./.issue_cache
